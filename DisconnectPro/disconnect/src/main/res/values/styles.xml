<resources>

    <!-- Base application theme. -->
    <style name="AppTheme" parent="Theme.AppCompat.Light.DarkActionBar">
        <!-- Customize your theme here. -->
        <item name="colorPrimary">@color/colorPrimary</item>
        <item name="colorPrimaryDark">@color/colorPrimaryDark</item>
        <item name="colorAccent">@color/colorAccent</item>
    </style>

    <style name="SplashTheme" parent="Theme.AppCompat.Light.NoActionBar">
    </style>

    <style name="BottomNavigationRadioButton">
        <item name="android:textColor">@android:color/white</item>
        <item name="android:background">@null</item>
        <item name="android:button">@null</item>
        <item name="android:minHeight">65dp</item>
        <item name="android:minWidth">70dp</item>
        <item name="android:gravity">center</item>
        <item name="android:paddingTop">12dp</item>
        <item name="android:textSize">12dp</item>
    </style>

    <style name="stats_top_label">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:gravity">center_horizontal</item>
        <item name="android:textSize">13sp</item>
        <item name="android:textColor">@color/gray4_disconnect</item>
    </style>

    <style name="stats_top_value">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:gravity">center_horizontal</item>
        <item name="android:textSize">30sp</item>
        <item name="android:layout_marginTop">-5dp</item>
        <item name="android:layout_marginBottom">-5dp</item>
        <item name="android:textColor">@color/purple_disconnect</item>
    </style>

    <style name="bucket_label">
        <item name="android:layout_weight">1</item>
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:gravity">center</item>
        <item name="android:background">@drawable/stats_bucket_background</item>
    </style>

    <style name="stats_top_container">
        <item name="android:layout_marginTop">@dimen/text_margin_half</item>
        <item name="android:layout_marginBottom">@dimen/text_margin_half</item>
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:layout_weight">1</item>
        <item name="android:orientation">vertical</item>
    </style>

    <style name="full_screen" parent="android:Theme" >
        <item name="android:windowNoTitle">true</item>
        <item name="android:windowFullscreen">true</item>
        <item name="android:windowIsFloating">false</item>
        <item name="android:windowAnimationStyle">@style/UpDownAnimation</item>
    </style>

    <style name="UpDownAnimation" parent="@android:style/Animation.Activity">
        <item name="android:windowEnterAnimation">@anim/anim_up</item>
        <item name="android:windowExitAnimation">@anim/anim_down</item>
    </style>

    <style name="premium_feature_icon">
        <item name="android:layout_weight">0</item>
        <item name="android:layout_width">18sp</item>
        <item name="android:layout_height">18dp</item>
        <item name="android:scaleType">centerInside</item>
    </style>

    <style name="premium_feature_title">
        <item name="android:layout_weight">1</item>
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:textColor">@color/grey2_disconnect</item>
        <item name="android:textSize">13sp</item>
        <item name="android:layout_gravity">center_vertical</item>
        <item name="android:layout_marginLeft">@dimen/text_margin_half</item>
    </style>

</resources>
