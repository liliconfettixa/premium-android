<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:orientation="horizontal"
    android:background="@drawable/subscription_background"
    android:layout_marginTop="@dimen/text_margin"
    >

    <LinearLayout
        android:layout_weight="3"
        android:layout_width="match_parent"
        android:layout_height="90dp"
        android:orientation="vertical"
        android:layout_gravity="center_vertical"
        >
        <TextView
            android:layout_weight="1"
            android:id="@+id/description"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:textAppearance="?attr/textAppearanceListItem"
            tools:text="12 months"
            android:paddingLeft="@dimen/text_margin"
            android:paddingBottom="@dimen/text_margin_half"
            android:paddingTop="@dimen/text_margin"
            android:gravity="center_vertical"
            android:textColor="@color/purple_disconnect"
            android:textSize="18sp"
            />
        <TextView
            android:layout_weight="1"
            android:id="@+id/price"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:textAppearance="?attr/textAppearanceListItem"
            tools:text="$35.99"
            android:paddingLeft="@dimen/text_margin"
            android:paddingBottom="@dimen/text_margin"
            android:paddingTop="@dimen/text_margin_half"
            android:gravity="center_vertical"
            android:background="@drawable/subscription_price_background"
            android:textColor="@android:color/white"
            android:textSize="16sp"
            />
    </LinearLayout>

    <TextView
        android:layout_weight="2"
        android:id="@+id/price_per_month"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:textAppearance="?attr/textAppearanceListItem"
        tools:text="$4.99 / month"
        android:layout_margin="@dimen/text_margin"
        android:gravity="center_vertical|right"
        android:textColor="@color/purple_disconnect"
        android:textSize="20sp"
        android:textStyle="bold"
        />
</LinearLayout>
